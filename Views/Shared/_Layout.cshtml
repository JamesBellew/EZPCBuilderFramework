<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EZPCBuilder</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm "
             style="background-color:transparent;">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><b>EZPCBuilder</b></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="PCs" asp-action="Index">PCs</a>
                        </li>

                        <div class="btn-group">
                            <button type="button" class="btn btn-info" style="background-color:mediumpurple;">Hardware Parts</button>
                            <button type="button" class="btn btn-info dropdown-toggle dropdown-toggle-split"  style="background-color:mediumpurple;"data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <div class="dropdown-menu">
                                <li class="nav-item">
                                    <a class="nav-link text-dark  " asp-area="" asp-controller="Cases" asp-action="Index">Cases</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark " asp-area="" asp-controller="Graphics" asp-action="Index">Graphics</a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav-link text-dark " asp-area="" asp-controller="Memories" asp-action="Index">Memories</a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav-link  text-dark" asp-area="" asp-controller="Processors" asp-action="Index">Processors</a>
                                </li>
                                <div class="dropdown-divider"></div>
                                <li class="nav-item">
                                    <a class="nav-link  text-dark" asp-area="" asp-controller="PCs" asp-action="Index">Pre Builds</a>
                                </li>
                            </div>
                        </div>

                        <hr />







                        <li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole("Administrator"))
                                {
                                    <a class="nav-link " style="color:mediumpurple;" asp-area="" asp-controller="Admin" asp-action="Create">Manage Roles</a>
                                }

                            }
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - EZPCBuilder - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
