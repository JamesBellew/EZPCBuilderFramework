@model IEnumerable<EZPCBuilder.Models.PC>

@{
    ViewData["Title"] = "Index";
}
<style>
    b {
        color: mediumpurple;
    }
</style>
<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="card mb-3" id="showcase_card" style="background-color: transparent;">
    <img style="height:40vh; width:40%;left:30%;position:relative; " src="https://upload.wikimedia.org/wikipedia/commons/f/f5/Avalanche_Hardline_Liquid_Cooled_Gaming_PC.png" class="card-img-top" alt="...">
    <div class="card-body">
        <h2 class="card-title" style="color:mediumpurple;text-align:center;">Falcon Heavy</h2>
        <p class="card-text"><b>Processor</b> : Core I9 1500x</p>
        <p class="card-text"><b>Graphics</b> : Core I9 1500x</p>
        <p class="card-text"><b>Motherboard</b> : Core I9 1500x</p>
        <p class="card-text"><b>Memory</b> : Core I9 1500x</p>
        <p class="card-text"><b>Storage</b> : Core I9 1500x</p>
        <h1 class="card-text" style="text-align:right;"><small class="text-muted"> <b>$1999.99</b></small></h1>
    </div>
</div>



















@foreach (var item in Model)
{

<div class="card-group">
    <div class="card">
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.pc_name)</h5>
            <p class="card-text"><b>Processor</b> :   @Html.DisplayNameFor(model => model.Processor)</p>
            <p class="card-text"><b>Graphics</b> :   @Html.DisplayNameFor(model => model.Graphics)</p>
            <p class="card-text"><b>Storage</b> :   @Html.DisplayNameFor(model => model.Storage)</p>
            <p class="card-text"><b>Memory</b> :   @Html.DisplayNameFor(model => model.Memory)</p>
            <p class="card-text"><b>Case</b> :   @Html.DisplayNameFor(model => model.Case)</p>
        </div>
    </div>

    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
</div>


}

















  
                    
                    
                
      
