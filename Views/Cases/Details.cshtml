@model EZPCBuilder.Models.Case

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Case</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FormFactor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FormFactor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole("Administrator"))
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ImageName)
                </dt>

                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ImageName)
                </dd>
            }
        }
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Administrator"))
        {
            <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.ID">Edit</a> 
                                                                                        }
    }
<a class="btn btn-success" asp-action="Index">Back to Cases</a>
</div>
